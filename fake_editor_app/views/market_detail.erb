<div class="market-detail">
  <div class="breadcrumb">
    <a href="/">‚Üê Retour au dashboard</a>
  </div>
  
  <h2>D√©tails du March√©</h2>
  
  <div class="market-info">
    <h3><%= @market.name %></h3>
    <p><strong>Identifiant:</strong> <code><%= @market.identifier %></code></p>
    <p><strong>Lot:</strong> <%= @market.lot_name || 'N/A' %></p>
    <p><strong>Statut:</strong> 
      <span class="status-badge status-<%= @market.status %>">
        <%= @market.status == 'completed' ? '‚úÖ Configur√©' : '‚è≥ En attente' %>
      </span>
    </p>
  </div>
  
  <% if @market.has_webhook_data? %>
    <div class="webhook-section" id="webhook">
      <h3>üîç Debug Webhook Data</h3>
      <div class="webhook-info">
        <p><strong>Re√ßu le:</strong> <%= @market.webhook_received_at.strftime('%d/%m/%Y √† %H:%M:%S') %></p>
      </div>
      <div class="webhook-payload">
        <h4>Contenu complet du webhook:</h4>
        <pre class="webhook-json"><%= JSON.pretty_generate(@market.webhook_data) %></pre>
      </div>
    </div>
  <% end %>
  
  <div class="applications-section">
    <h3>Candidatures (<%= @applications.count %>)</h3>
    
    <% if @current_token&.valid? && @market.status == 'completed' %>
      <div class="action-bar">
        <form action="/start_application" method="post" class="inline-form">
          <input type="hidden" name="market_identifier" value="<%= @market.identifier %>">
          <input type="text" name="siret" placeholder="SIRET (optionnel)" maxlength="14">
          <button type="submit" class="btn btn-primary">
            D√©marrer une candidature test
          </button>
        </form>
      </div>
    <% end %>
    
    <% if @applications.any? %>
      <table class="applications-table">
        <thead>
          <tr>
            <th>Identifiant</th>
            <th>SIRET</th>
            <th>Statut</th>
            <th>Date de cr√©ation</th>
            <th>Date de compl√©tion</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @applications.each do |app| %>
            <tr class="<%= app.status %>">
              <td><code><%= app.identifier %></code></td>
              <td><%= app.siret || 'Non renseign√©' %></td>
              <td>
                <span class="status-badge status-<%= app.status %>">
                  <% if app.status == 'completed' %>
                    ‚úÖ Termin√©e
                  <% else %>
                    ‚è≥ En cours
                  <% end %>
                </span>
              </td>
              <td><%= app.created_at.strftime('%d/%m/%Y %H:%M') %></td>
              <td><%= app.completed_at&.strftime('%d/%m/%Y %H:%M') || '-' %></td>
              <td>
                <a href="/applications/<%= app.identifier %>" class="btn btn-small">
                  D√©tails
                </a>
                <% if app.status != 'completed' %>
                  <a href="<%= ENV['FAST_TRACK_URL'] %>/candidate/market_applications/<%= app.identifier %>/company_identification" 
                     target="_blank" class="btn btn-small">
                    Reprendre
                  </a>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="empty-state">Aucune candidature pour ce march√©.</p>
    <% end %>
  </div>
</div>