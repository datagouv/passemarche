<div class="fr-container">
  <div class="fr-grid-row">
    <div class="fr-col-12">
      <%= render 'admin/shared/navigation' %>

      <h1><%= t('admin.editors.index.title') %></h1>

      <% if current_user_can_modify? %>
        <div class="fr-mb-3w">
          <%= link_to t('admin.editors.index.add'), new_admin_editor_path, class: "fr-btn" %>
        </div>
      <% end %>

      <div class="fr-table">
        <table>
          <thead>
            <tr>
              <th scope="col"><%= t('admin.shared.name') %></th>
              <th scope="col"><%= t('admin.editors.index.client_id') %></th>
              <th scope="col"><%= t('admin.shared.authorized') %></th>
              <th scope="col"><%= t('admin.shared.active') %></th>
              <th scope="col"><%= t('admin.shared.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @editors.each do |editor| %>
              <tr>
                <td><%= editor.name %></td>
                <td><%= editor.client_id %></td>
                <td>
                  <% if editor.authorized %>
                    <span class="fr-badge fr-badge--success"><%= t('admin.shared.yes') %></span>
                  <% else %>
                    <span class="fr-badge fr-badge--error"><%= t('admin.shared.no') %></span>
                  <% end %>
                </td>
                <td>
                  <% if editor.active %>
                    <span class="fr-badge fr-badge--success"><%= t('admin.shared.yes') %></span>
                  <% else %>
                    <span class="fr-badge fr-badge--error"><%= t('admin.shared.no') %></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to t('admin.shared.view'), admin_editor_path(editor), class: "fr-btn fr-btn--sm" %>
                  <% if current_user_can_modify? %>
                    <%= link_to t('admin.shared.edit'), edit_admin_editor_path(editor), class: "fr-btn fr-btn--sm fr-btn--secondary" %>
                    <%= link_to t('admin.shared.delete'), admin_editor_path(editor), method: :delete,
                                data: { confirm: t('admin.editors.index.confirm_delete') },
                                class: "fr-btn fr-btn--sm fr-btn--tertiary" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
