<div class="fr-table" id="categories-table">
  <table>
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"><%= t('admin.categories.categories_table.headers.buyer_label') %></th>
        <th scope="col"><%= t('admin.categories.categories_table.headers.candidate_label') %></th>
        <th scope="col"><%= t('admin.categories.categories_table.headers.actions') %></th>
      </tr>
    </thead>
    <tbody <% if current_user_can_modify? %>
             data-controller="drag-reorder"
             data-drag-reorder-url-value="<%= reorder_admin_categories_path %>"
           <% end %>>
      <% @categories.each do |category| %>
        <tr data-item-id="<%= category.id %>">
          <td <% if current_user_can_modify? %>data-drag-handle<% end %>>
            <% if current_user_can_modify? %>
              <%= render 'admin/socle_de_base/drag_handle_icon' %>
            <% end %>
          </td>
          <td><%= category.buyer_label %></td>
          <td><%= category.candidate_label %></td>
          <td>
            <%= admin_action_link_to t('admin.categories.actions.edit'),
                                     edit_admin_category_path(category),
                                     class: "fr-btn fr-btn--secondary fr-btn--sm",
                                     data: { turbo_frame: "modal" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
