<% groups = categorized_changes(changes) %>
<div class="fr-grid-row fr-grid-row--gutters">
  <% if groups[:buyer].any? %>
    <div class="fr-col-12 fr-col-md-6">
      <h3 class="fr-h5"><%= t('admin.audit_logs.show.buyer_content') %></h3>
      <%= render 'creation_changes_table', changes: groups[:buyer] %>
    </div>
  <% end %>

  <% if groups[:candidate].any? %>
    <div class="fr-col-12 fr-col-md-6">
      <h3 class="fr-h5"><%= t('admin.audit_logs.show.candidate_content') %></h3>
      <%= render 'creation_changes_table', changes: groups[:candidate] %>
    </div>
  <% end %>

  <% if groups[:other].any? %>
    <div class="fr-col-12">
      <%= render 'creation_changes_table', changes: groups[:other] %>
    </div>
  <% end %>
</div>
