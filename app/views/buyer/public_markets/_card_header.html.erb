<%
  title ||= ""
  tag ||= :h4
  additional_classes ||= ""
%>

<div class="fr-card__header">
  <%= content_tag tag, title, class: "fr-card__title fr-mb-0 fr-py-3w fr-px-4w #{additional_classes} fr-background-alt--grey" %>
</div>

<% if block_given? %>
  <div class="fr-card__body">
    <%= yield %>
  </div>
<% end %>
