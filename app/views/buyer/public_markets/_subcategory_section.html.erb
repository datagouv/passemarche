<%
  subcategory ||= nil
  subcategories ||= {}
  presenter ||= @presenter
  is_last = false if is_last.nil?
  
  show_header = presenter&.should_display_subcategory?(subcategories)
  margin_class = is_last ? '' : 'fr-mb-3w'
%>

<div class="<%= margin_class %>">
  <div class="fr-background-alt--grey fr-pl-6v fr-pr-6v fr-pt-4v">
    <% if show_header %>
      <h4 class="fr-text--lg fr-text--bold fr-mb-2w">
        <%= t("form_fields.subcategories.#{subcategory}") %>
      </h4>
    <% end %>
    <%= yield if block_given? %>
  </div>
</div>
