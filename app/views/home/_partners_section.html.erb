<%# Partners Section - Shared between candidate and buyer pages
    Parameters:
    - scope: translation scope (e.g., 'home.candidate' or 'home.buyer')
    - background: optional CSS class for background (e.g., 'fr-background-alt--blue-france')
%>
<section class="fr-py-8w <%= local_assigns[:background] %>">
  <div class="fr-container">
    <div class="fr-grid-row fr-grid-row--center">
      <div class="fr-col-12 fr-col-md-8" style="text-align: center;">
        <h2 class="fr-h3 fr-mb-1w"><%= t("#{scope}.partners.title") %></h2>
        <p class="fr-text--lg fr-mb-4w"><%= t("#{scope}.partners.subtitle") %></p>

        <ul class="fr-btns-group fr-btns-group--center fr-btns-group--inline">
          <% %w[platform_1 platform_2 platform_3].each do |platform| %>
            <li>
              <%= link_to t("#{scope}.partners.platforms.#{platform}"),
                          "#",
                          class: "fr-btn" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>
