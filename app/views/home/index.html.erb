<div class="fr-grid-row fr-grid-row--gutters fr-grid-row--center fr-mt-2w">
  <div class="fr-col-12 fr-col-md-8">
    <div class="fr-callout">
      <h1 class="fr-callout__title"><%= t('home.title') %></h1>
      <p class="fr-callout__text">
        <%= t('home.subtitle') %> ðŸš€
      </p>
      <p class="fr-text--sm">
        <%= t('home.description') %>
      </p>
    </div>

    <div class="fr-highlight">
      <p>
        <%= t('home.welcome.text', app_name: content_tag(:strong, t('application.name'))) %>
      </p>
    </div>

    <div class="fr-mt-4w">
      <h2><%= t('home.features.title') %></h2>
      <ul class="fr-badges-group">
        <li>
          <p class="fr-badge fr-badge--info"><%= t('home.features.siret') %></p>
        </li>
        <li>
          <p class="fr-badge fr-badge--success"><%= t('home.features.documents') %></p>
        </li>
        <li>
          <p class="fr-badge fr-badge--new"><%= t('home.features.attestations') %></p>
        </li>
        <li>
          <p class="fr-badge fr-badge--warning"><%= t('home.features.integration') %></p>
        </li>
      </ul>
    </div>

    <div class="fr-mt-4w">
      <h3><%= t('home.workflow.title') %></h3>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-md-4">
          <div class="fr-card fr-card--no-border">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h4 class="fr-card__title"><%= t('home.workflow.steps.identification.title') %></h4>
                <p class="fr-card__desc">
                  <%= t('home.workflow.steps.identification.description') %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="fr-col-12 fr-col-md-4">
          <div class="fr-card fr-card--no-border">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h4 class="fr-card__title"><%= t('home.workflow.steps.documents.title') %></h4>
                <p class="fr-card__desc">
                  <%= t('home.workflow.steps.documents.description') %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="fr-col-12 fr-col-md-4">
          <div class="fr-card fr-card--no-border">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h4 class="fr-card__title"><%= t('home.workflow.steps.candidature.title') %></h4>
                <p class="fr-card__desc">
                  <%= t('home.workflow.steps.candidature.description') %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
