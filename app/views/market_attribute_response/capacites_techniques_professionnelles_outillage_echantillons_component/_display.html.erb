<div class="field-layout-container">
  <div class="field-layout-content">
    <strong>
      <%= component.field_label %>
    </strong>

    <% if component.show_value? %>
      <br>

      <% if component.data? %>
        <div class="fr-mt-2w">
          <% component.echantillons_with_data.each_with_index do |(timestamp, echantillon), index| %>
            <div class="fr-card fr-card--sm fr-mb-2w">
              <div class="fr-card__body">
                <div class="fr-card__content">
                  <h6 class="fr-text--sm fr-mb-1w">
                    <span class="fr-icon-image-line fr-icon--sm fr-mr-1v" aria-hidden="true"></span>
                    Echantillon <%= index + 1 %>
                  </h6>

                  <% if echantillon['description'].present? %>
                    <div class="fr-mb-1v">
                      <strong>Description :</strong><br>
                      <%= simple_format(echantillon['description'], class: 'fr-text--sm') %>
                    </div>
                  <% end %>

                  <% fichiers = component.echantillon_fichiers(timestamp) %>
                  <% if fichiers.any? %>
                    <div class="fr-mb-1v fr-text--sm">
                      <strong><%= fichiers.size == 1 ? 'Fichier' : 'Fichiers' %> :</strong>
                      <div class="fr-mt-1v">
                        <% fichiers.each do |fichier| %>
                          <%= render MarketAttributeResponse::Shared::DocumentItemComponent.new(
                            document: fichier,
                            market_application: component.market_attribute_response.market_application,
                            context: component.context,
                            naming_service: component.naming_service
                          ) %>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <span class="fr-text--md fr-text--mention-grey"><%= component.no_data_message %></span>
      <% end %>
    <% end %>
  </div>
  <div class="field-layout-badge">
    <%= render SourceBadgeComponent.new(market_attribute_response: component.market_attribute_response) %>
  </div>
</div>
